<% include ../partials/header %>
<div class = "container">
	
	<header class = "jumbotron">
		<h1>All the diferent campgrounds</h1>
		<p>View camp from all over the world!</p>
		<p><a class = "btn btn-primary btn-lg" href="/campgrounds/new">add new camp</a></p>
	</header>

	
	<div class = "row text-center" style = "display:flex; flex-wrap:wrap;">
		<% campgrounds.forEach((camp) =>{ %>
			<div class = "col-md-3 col-sm-6">
				<div class = "thumbnail">
					<img src = "<%= camp.image%>">
					<div class = "caption">
						<%=camp.name%>
					</div>
					<p>
						<a href ="/campgrounds/<%=camp._id %>" class = "btn btn-primary">more info</a>
					</p>
				</div>
			</div>
		<% }); %>
	</div>
	<% include ../partials/footer %>	
</div>

	
